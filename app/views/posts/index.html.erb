<h1>Hello Index</h1>

<p><%= notice %></p>
<%= link_to "Create A Post", new_post_path %>

<table>
    <tr>
        <th>ID</th>
        <th>Title</th>
        <th>Body</th>
    </tr>
    <% @posts.each do |post| %>
    <tr>
        <td>ID: <%= post.id %></td>
        <td>Title: <%= post.title %></td>
        <td>Body: <%= post.body %></td>
        <td>
            <%= link_to 'Show', post_path(post) %>
            <%= link_to 'Edit', edit_post_path(post) %>
            <%= link_to 'Delete', post, method: :delete, data: {confirm: "Are you sure?"} %>
        </td>
    </tr>
    <% end %>
</table>
